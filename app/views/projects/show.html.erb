<% title(@project.name, "Projects") %>
<h2><%= @project.name %></h2>
<% admins_only do %>
<%= link_to "Edit Project",
    edit_project_path(@project) %>

<%= link_to "Delete Project",
    project_path(@project),
    :method => :delete,
    :confirm => "Are you sure you wish to delete this project?" %>
    <% end %>
<%= link_to "New How To", new_project_howto_path(@project) %>
<% end %>

<ul id="howtos">
  <% @project.howtos.each do |howto| %>
    <li>
      #<%= howto.id %> -
      <%= link_to howto.title, [@project, howto] %>
    </li>
    <% end %>
  </ul>
